set answer to the button returned of (display dialog "What would you like to do with disk0?" with title "disk0 Utility" with icon caution buttons {"Spin Up", "Spin Down"})

if answer = "Spin Up" then
	do shell script "diskutil mount DBC2504C-DC25-393C-9310-576FF47A2CE2"
	display dialog "Mounted first volume.
(disk0s2)" with title "disk0 Utility" buttons {"Continue"} giving up after 3
	
	do shell script "diskutil mount 6D044530-FFC0-3116-9A4B-B5C97F90A721"
	display dialog "Mounted second volume.
(disk0s5)" with title "disk0 Utility" buttons {"Finish"} giving up after 3
	
	
else if answer = "Spin Down" then
	
	
	do shell script "diskutil unmountDisk disk0"
	display dialog "Unmounted disk0." with title "disk0 Utility" buttons {"Finish"} giving up after 3
	
	
end if
